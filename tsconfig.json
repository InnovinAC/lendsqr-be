{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "knexfile.ts",
    "db/migrations/**/*.ts",
    "db/migrations/**/*.js",
    "db/seeds/**/*.ts",
    "db/seeds/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
